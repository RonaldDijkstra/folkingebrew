---
title: "Our Beers"
description: "All our beers"
blog: beers
pageable: true
---
<% content_for :page_title, t("pages.beers.title", page_number: page_number, num_pages: num_pages) %>
<% content_for :meta_description, t("pages.beers.meta_description", page_number: page_number, num_pages: num_pages) %>

<header class="normal-page-header">
  <div class="grid-row">
    <h1>
      <%= t("beers.title") %>
        <% if page_number > 1 %>
          <%= page_number %>
        <% end %>
    </h1>
  </div>
</header>
<section class="beers wide-row">
  <div class="grid-row">
    <div class="beer-grid-wrap">
      <div class="beer-grid feed">
        <div class="row">
          <% page_articles.each do |beer| %>
            <%= partial "beers/beer-preview", locals: { beer: beer } %>
          <% end %>
        </div>
      </div>
    </div>
    <%= partial "partials/pagination", locals: current_page.metadata[:locals] %>
  </div>
</section>
<%= partial "partials/shared/newsletter-subscribe", locals: { button_text: t("newsletter.subscribe")} %>
