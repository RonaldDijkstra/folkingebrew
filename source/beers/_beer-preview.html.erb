<div class="beer-wrap excerpt-box-wrap">
  <% link_to beer.url, class: "beer excerpt-box background-#{beer.data.background}" do %>
    <div class="image-wrap">
      <div class="image-wrap-content content">
        <div class="image-wrap-content-inner">
          <h4 class="excerpt-box-title">
            <%= beer.title %>
          </h4>
          <div class="meta">
            <%= beer.data.style %>
          </div>
        </div>
      </div>
      <figure>
        <%= image_tag beer.data.image, alt: beer.title, class: "image" %>
      </figure>
    </div>
    <div class="content content-alignment--center">
      <div class="meta"></div>
    </div>
  <% end %>
</div>
