<% wrap_layout :layout do %>
  <section class="beer wide-row">
    <div class="grid-row beer-item">
      <div class="beer-image background-<%= current_article.data.background %>">
        <div class="image-wrap">
          <%= image_tag current_article.data.image, alt: current_article.title, class: "image" %>
        </div>
      </div>
      <div class="beer-text">
        <div>
          <h1>
            <%= current_article.title %>
          </h1>
          <div class="description">
            <p>
              <%= current_article.data.description %>
            </p>
            <% if current_article.data.currently_available %>
              <p>
                <%= link_to "Buy this beer &raquo;", "#{current_article.data.webshop_link}" %>
              </p>
            <% end %>
          </div>
          <div class="beer-facts">
              <% if current_article.data.abv %>
              <div class="beer-fact">
                <span class="beer-fact-value beer-fact-abv"><%= current_article.data.abv %></span>
                <span class="beer-fact-label"><%= t("beers.facts.abv") %></span>
              </div>
            <% end %>
            <% if current_article.data.style %>
              <div class="beer-fact">
                <span class="beer-fact-value"><%= current_article.data.style %></span>
                <span class="beer-fact-label"><%= t("beers.facts.style") %></span>
              </div>
            <% end %>
            <% if current_article.data.hops %>
              <div class="beer-fact">
                <span class="beer-fact-value"><%= current_article.data.hops %></span>
                <span class="beer-fact-label"><%= t("beers.facts.hops") %></span>
              </div>
            <% end %>
            <% if current_article.data.fruits %>
              <div class="beer-fact">
                <span class="beer-fact-value"><%= current_article.data.fruits %></span>
                <span class="beer-fact-label"><%= t("beers.facts.fruits") %></span>
              </div>
            <% end %>
            <% if current_article.data.malts %>
              <div class="beer-fact">
                <span class="beer-fact-value"><%= current_article.data.malts %></span>
                <span class="beer-fact-label"><%= t("beers.facts.malts") %></span>
              </div>
            <% end %>
            <% if current_article.data.adjuncts %>
              <div class="beer-fact">
                <span class="beer-fact-value"><%= current_article.data.adjuncts %></span>
                <span class="beer-fact-label"><%= t("beers.facts.adjuncts") %></span>
              </div>
            <% end %>
            <% if current_article.data.yeast %>
              <div class="beer-fact">
                <span class="beer-fact-value"><%= current_article.data.yeast %></span>
                <span class="beer-fact-label"><%= t("beers.facts.yeast") %></span>
              </div>
            <% end %>
            <% if current_article.data.release_date %>
              <div class="beer-fact">
                 <span class="beer-fact-value"><%= current_article.data.release_date %></span>
                <span class="beer-fact-label"><%= t("beers.facts.release_date") %></span>
              </div>
            <% end %>
          </div>
          <% if current_article.data.ut_link %>
            <div class="ut-link">
              <a href="<%= current_article.data.ut_link %>" class="icon-untappd" target="_blank"></a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="grid-row back-link">
      <%= partial "partials/button", locals: { to: "/beers/index.html",
                                               variant: "medium-size solid green",
                                               icon_left: "icons/arrow-left.svg",
                                               text: t("beers.back_to_all_beers")} %>
    </div>
  </section>

  <%= partial "partials/shared/newsletter-subscribe", locals: { button_text: "Subscribe" } %>
<% end %>
