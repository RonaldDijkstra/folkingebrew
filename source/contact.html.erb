---
<%= regular_header title: t("pages.contact.title") %>

<% regular_content html: { class: "mb-24" } do %>
  <% content_tag(:article, class: "prose mb-6 max-w-lg m-auto") do %>
    <%= markdownify(dato.block.contact) %>
  <% end %>
  <%= partial "partials/form", locals: { name: "contact",
                                         fields: ["name", "email", "message"] } %>
<% end %>
