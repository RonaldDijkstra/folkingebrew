      <div class="h-[500px]">
        <% if dato.the_pub_page&.map_embed_url %>
          <iframe 
            src="<%= dato.the_pub_page.map_embed_url %>"
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
