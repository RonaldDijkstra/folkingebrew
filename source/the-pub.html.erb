<% content_for(:head) do %>
  <%= dato_meta_tags(dato.the_pub_page) if dato.the_pub_page %>
<% end %>

<% if dato.the_pub_page&.transparent_header %>
  <% content_for(:page_class) do %>
    transparent-header
  <% end %>
<% end %>

<% if dato.the_pub_page&.background_image %>
  <section class="relative px-6 text-center -mt-16 sm:-mt-20 bg-center bg-no-repeat bg-cover h-screen flex flex-col justify-center items-center" style="background-image: url(<%= dato.the_pub_page.background_image.url(fm: :webp, w: 1920, h: 1280) %>)">
    <div class="absolute inset-0 bg-[#5C2D0C]/80"></div>
    <div class="relative">
      <% if dato.the_pub_page.title %>
        <h1 class="text-white text-3xl sm:text-5xl font-bold mb-5">
          <%= dato.the_pub_page.title %>
        </h1>
      <% end %>
      <% if dato.the_pub_page.subtitle %>
        <h2 class="text-white text-xl sm:text-2xl font-light">
          <%= dato.the_pub_page.subtitle %>
        </h2>
      <% end %>
    </div>
  </section>
<% end %>

<section class="bg-white py-10 md:py-20 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 items-center">
      <div>
        <% if dato.the_pub_page&.introduction_title %>
          <h3 class="text-2xl font-bold mb-4"><%= dato.the_pub_page.introduction_title %></h3>
        <% end %>
        <% if dato.the_pub_page&.introduction_text %>
          <% markdown_content html: { class: "mb-6 prose prose-a:text-green-default hover:prose-a:text-green-default" } do %>
            <%= markdownify(dato.the_pub_page.introduction_text) %>
          <% end %>
        <% end %>
      </div>
      <div>
        <% if dato.the_pub_page&.introduction_image %>
          <% markdown_content html: { class: "mb-6" } do %>
            <%= image_tag dato.the_pub_page.introduction_image.url(fm: :webp, w: 1920, h: 1280), alt: dato.the_pub_page.introduction_image.alt, class: "w-full h-auto" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>

