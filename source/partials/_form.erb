<form name="<%= locals[:name] %>" method="POST" data-netlify="true" action="/bedankt/">
  <fieldset>
    <% if locals[:fields].include? "name" %>
      <div class="form-item">
        <label for="name">
          Naam
        </label>
        <input type="text" name="naam" id="name" required>
      </div>
    <% end %>

    <% if locals[:fields].include? "email" %>
      <div class="form-item">
        <label for="email">
          E-mailadres
        </label>
        <input type="email" name="e-mail" id="email" required>
      </div>
    <% end %>

    <% if locals[:fields].include? "type" %>
      <div class="form-item">
        <label for="inquiry-type">
          Soort aanvraag
        </label>
        <div class="select">
          <select id="inquiry-type" name="inquiry-type" required>
            <option selected disabled>Kies een optie</option>
            <option value="particulier">Particulier</option>
            <option value="zakelijk">Zakelijk</option>
          </select>
        </div>
      </div>
    <% end %>

    <% if locals[:fields].include? "message" %>
      <div class="form-item">
        <label for="message">
          Bericht
        </label>
        <textarea name="Je bericht" id="message" rows="6"></textarea>
      </div>
    <% end %>

    <div>
      <button type="submit" class="button <%= + locals[:button_variant] ||= "default" %>">
        <% if locals[:button_text] %>
          <%= locals[:button_text] %>
        <% else %>
          Versturen
        <% end %>
        <% if locals[:icon_right] %>
          <%= inline_svg icon_right, class: "inline-svg button-icon-right" %>
        <% end %>
      </button>
    </div>
  </fieldset>
</form>
