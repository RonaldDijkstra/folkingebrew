<% link_to locals[:to], class: "button " + locals[:variant] ||= "default" do %>
  <% if locals[:arrow_left] %>
    <%= inline_svg arrow_left, class: "inline-svg arrow-left" %>
  <% end %>
  <%= locals[:text] %>
  <% if locals[:arrow_right] %>
    <%= inline_svg arrow_right, class: "inline-svg arrow-right" %>
  <% end %>
<% end %>
