<%
  if current_page.data.image
    og_image = full_url(image_path(current_page.data.image))
  else
    og_image = full_url(image_path("/assets/images/folkingebrew-1200x1200.png"))
  end
%>

<meta property="og:site_name" content="<%= data.site.name %>">
<meta property="og:type" content="website">
<meta property="og:title" content="<%= page_title %>">
<meta property="og:url" content="<%= full_url(current_page.url) %>">
<meta property="og:description" content="<%= meta_description %>">
<meta property="og:image" content="<%= og_image %>">
<meta property="og:locale" content="nl_NL">
