<% link_to product.url,
  class: "product",
  "data-item-id": product.data.id,
  "data-item-quantity": "1",
  "data-item-price": product.data.price,
  "data-item-name": product.title,
  "data-item-max-quantity": product.data.max_quantity,
  "data-item-url": base_url + product.url,
  "data-item-image": base_url + image_path(product.data.image) do %>
  <div class="product-box">
    <div class="product-media">
      <%= image_tag product.data.image, alt: product.title, class: "product-image" %>
    </div>
    <div class="product-content">
      <div class="title">
        <h2>
          <%= product.title %>
        </h2>
      </div>
      <div class="price">
        <p>
          <%= number_to_currency(product.data.price, :unit => "â‚¬") %>
        </p>
      </div>
    </div>
  </div>
<% end %>
